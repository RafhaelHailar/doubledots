name: Release on dd.js Change

on:
  push:
    paths:
      - 'x/**'
      - 'src/dd/**'
#      - '.github/workflows/**'

permissions:
  contents: write

jobs:
  release_job:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v4
      with:
        fetch-depth: 2

    - name: Create date-fifo tag
      id: find_date_fifo
      run: |
        git fetch --tags
        TAGS=(
          "main$(date -u +'%y.%m.%d')"
          "main$(date -u +'%y.%m.%d.%H')"
          "main$(date -u +'%y.%m.%d.%H.%M')"
        )
        for TAG in "${TAGS[@]}"; do
          if ! git tag -l | grep -q "^$TAG$"; then
            echo "Found tag: $TAG"
            echo "RELEASE_TAG=$TAG" >> $GITHUB_ENV
            exit 0
          fi
        done
        LAST_TAG="main$(date -u +'%y.%m.%d.%H.%M.%S')"
        echo "Found tag: $LAST_TAG"
        echo "RELEASE_TAG=$LAST_TAG" >> $GITHUB_ENV

    - name: esbuild dd.js
      if: git diff --name-only ${{ github.event.before }} ${{ github.sha }} | grep -q '^src/dd/'
      run: |
        if ! git diff --name-only ${{ github.event.before }} ${{ github.sha }} | grep -q '^src/dd/'; then
          echo "No changes to dd.js detected."
          exit 0
        fi
        rm -f dd.js dd.js.map dd_dev.js dd_dev.js.map
        npx esbuild src/dd/dd.js --target=es2018 \
          --bundle --outdir=. --format=iife --sourcemap --minify
        npx esbuild src/dd/dd_dev.js --target=es2022 \
          --bundle --outdir=. --format=iife --sourcemap --minify
        git add dd.js dd.js.map dd_dev.js dd_dev.js.map

    - name: Commit and Push Changes
      run: |
        git config user.name "github-actions"
        git config user.email "github-actions@github.com"
        git commit -m "New release tag ${{ env.RELEASE_TAG }}"
        git tag ${{ env.RELEASE_TAG }}
        git push origin HEAD --tags
